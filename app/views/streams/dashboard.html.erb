<div class="max-w-5xl w-full mx-auto pt-10" data-controller="live-stream"> 
  <h1 class="text-4xl text-center"> Welcome to Dashboard </h1>

  <div class="flex">
    <%= link_to "#", data: { action: "live-stream#enableCamera", live_stream_target: "enableCamera" } do %>
      <div class="flex gap-2 items-center p-2 rounded-lg bg-green-500 text-green-100"> 
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
        </svg>
        Enable Camera
      </div>
    <% end %>

    <%= link_to "#", data: { action: "live-stream#disableCamera", live_stream_target: "disableCamera" }, class: "hidden" do %>
      <div class="flex gap-2 items-center p-2 rounded-lg bg-red-500 text-red-100"> 
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
        </svg>
        Disable Camera
      </div>
    <% end %>
  </div>

  <%= video_tag "", data: { live_stream_target: "videoPreview" } %>
</div>